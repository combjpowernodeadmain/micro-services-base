<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjzhianjia.scp.cgp.mapper.CLEUrgeRecordMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bjzhianjia.scp.cgp.entity.CLEUrgeRecord" id="cleUrgeRecordMap">
        <result property="id" column="id"/>
        <result property="cleCaseId" column="cle_case_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="crtUserName" column="crt_user_name"/>
        <result property="crtUserId" column="crt_user_id"/>
        <result property="crtTime" column="crt_time"/>
        <result property="tenantId" column="tenant_id"/>
    </resultMap>

    <select id="selectLastUrge" resultMap="cleUrgeRecordMap">
        SELECT cle_case_id,crt_user_name,crt_user_id FROM cle_urge_record WHERE id IN (
            SELECT MAX(id) id FROM cle_urge_record
            WHERE cle_case_id IN (
            <foreach collection="caseInfoIds" item="item" separator=",">
                #{item}
            </foreach>
            )
            GROUP BY cle_case_id
        )
    </select>
</mapper>