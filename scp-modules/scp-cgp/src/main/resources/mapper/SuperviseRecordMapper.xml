<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjzhianjia.scp.cgp.mapper.SuperviseRecordMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bjzhianjia.scp.cgp.entity.SuperviseRecord" id="superviseRecordMap">
        <result property="id" column="id"/>
        <result property="caseInfoId" column="case_info_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="crtUserName" column="crt_user_name"/>
        <result property="crtUserId" column="crt_user_id"/>
        <result property="crtTime" column="crt_time"/>
    </resultMap>

    <select id="selectLastSupervise" resultMap="superviseRecordMap">
        SELECT case_info_id,crt_user_name,crt_user_id FROM supervise_record WHERE id IN (
            SELECT MAX(id) id FROM supervise_record
            WHERE case_info_id IN (
            <foreach collection="caseInfoIds" item="item" separator=",">
                #{item}
            </foreach>
            )
            GROUP BY case_info_id
        )
    </select>
</mapper>