<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjzhianjia.scp.party.mapper.TrainGroupMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bjzhianjia.scp.party.entity.TrainGroup" id="trainGroupMap">
        <result property="id" column="id"/>
        <result property="trainGroupName" column="train_group_name"/>
        <result property="trainId" column="train_id"/>
    </resultMap>
    <!-- 通过优培批次id删除分组和成员关系 -->
    <delete id="deleteByTrainId">
        DELETE tg, tgm
        FROM
            train_group tg
        LEFT JOIN train_group_member tgm ON tgm.train_group_id = tg.id
        WHERE
            tg.train_id = #{trainId}
    </delete>
</mapper>