<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjzhianjia.scp.party.mapper.TrainActivityGroupMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.bjzhianjia.scp.party.entity.TrainActivityGroup" id="trainActivityGroupMap">
        <result property="id" column="id"/>
        <result property="trainActivityId" column="train_activity_id"/>
        <result property="trainGroupId" column="train_group_id"/>
    </resultMap>
    <!-- 通过简讯活动id获取分组成员关系 -->
    <select id="selectByTrainGroupNames" resultType="java.lang.String">
        SELECT
            tg.train_group_name trainGroupName
        FROM
            train_activity_group tag
        LEFT JOIN train_group tg ON tag.train_group_id = tg.id
        WHERE
            tag.train_activity_id =#{activityId}
    </select>
</mapper>